@model CRUDAspNetCoreMVCWebAppComEFCore.Models.Empregados

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar Empregados</h1>


<hr />


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        <h4>Cadastrar Empregados</h4>     
    </div>



    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="EmpregadosId" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>



                <div class="form-row">

                    <div class="form-group col-md-6">
                        <label asp-for="Codigo" class="control-label"></label>
                        <input asp-for="Codigo" class="form-control" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="Funcao" class="control-label"></label>
                        <input asp-for="Funcao" class="form-control" />
                        <span asp-validation-for="Funcao" class="text-danger"></span>

                    </div>
                </div>



                <div class="form-group">
                    <label asp-for="LocalizacaoEscritorio" class="control-label"></label>
                    <input asp-for="LocalizacaoEscritorio" class="form-control" />
                    <span asp-validation-for="LocalizacaoEscritorio" class="text-danger"></span>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="submit" value="Salvar" class="btn btn-primary  btn-block" onclick="return confirm('Casdastro feito e atualizado com sucesso!')" />
                    </div>


                    <div class="form-group col-md-6">
                        <a class="btn btn-info pull-right fa fa-plus btn btn-secondary  btn-block" asp-action="Index" ><i class="fa fa-table " ></i> Voltar</a>
                    </div>

                </div>


            </form>
        </div>
    </div>
</div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
